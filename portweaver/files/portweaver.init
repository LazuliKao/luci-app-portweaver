#!/bin/sh /etc/rc.common

START=99
STOP=10

USE_PROCD=1
PROG=/usr/bin/portweaver

start_service() {
	local enabled
	config_load portweaver
	config_get_bool enabled global enabled 1
	
	[ "$enabled" -eq 0 ] && {
		echo "PortWeaver is disabled in config"
		return 0
	}
	
	procd_open_instance
	procd_set_param command $PROG
	procd_set_param respawn
	procd_set_param stdout 1
	procd_set_param stderr 1
	procd_close_instance
}

service_triggers() {
	procd_add_reload_trigger "portweaver"
}

reload_service() {
	stop
	start
}
